<h1>Burgers!</h1>

<div class="container">
  <div class="row">
    <div class="col lg 6">
      <h2>To Be Eaten!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li class="ready">{{id}} {{burger_name}}
          <button class="devour" data-id="{{id}}">Devour it!</button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col lg 6">
      <h2>Devoured Yum!!!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li class="eaten">{{id}} {{burger_name}}</li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>


<div class="container">
  <h3>Create a Burger!</h3>
  <form class="create-form">

    <div class="form-group">
      <label for="burger">Burger Name:</label>
      <input type="text" id="burger" name="name">
    </div>

    <button type="submit">Add Burger!</button>
  </form>
</div>